<div class="w-25 mx-auto">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="h3 mb-3 fw-normal text-center">Log in</h2>

    <div class="field form-floating mb-1">
      <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
      <%= f.label :email %><br />
    </div>

    <div class="field form-floating">
      <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
      <%= f.label :password %><br />
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-1">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"w-100 btn btn-lg btn-primary mb-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

